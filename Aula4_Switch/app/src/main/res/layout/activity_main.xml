<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Switch
            android:text="Mundial"
            android:layout_width="169dp"
            android:layout_height="60dp" android:id="@+id/switchMundial"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="102dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp" android:checked="false"/>
    <TextView
            android:text="O Palmeiras NÃƒO TEM Mundial!!!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewSwitch"
            tools:layout_editor_absoluteX="168dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switchMundial" android:gravity="center"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/toggleButtonLigado"
            tools:layout_editor_absoluteX="163dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSwitch"
            android:textOff="Desligado" android:textOn="Ligado" android:onClick="alterarLigado"
            android:checked="false"/>
    <TextView
            android:text="Desligado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewToggleButton"
            tools:layout_editor_absoluteX="170dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toggleButtonLigado" android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>