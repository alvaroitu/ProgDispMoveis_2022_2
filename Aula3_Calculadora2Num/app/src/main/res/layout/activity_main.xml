<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Adicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonAdicao"
            tools:layout_editor_absoluteX="113dp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumero2"/>
    <Button
            android:text="Divisão"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonDivisao"
            tools:layout_editor_absoluteX="118dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMultiplicacao"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNumero2"
            tools:layout_editor_absoluteX="67dp" android:hint="numero 2" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumero1" android:gravity="center"
            android:minHeight="48dp"/>
    <Button
            android:text="Multiplicão"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonMultiplicacao"
            tools:layout_editor_absoluteX="116dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSubtracao"/>
    <Button
            android:text="Subtração"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSubtracao"
            tools:layout_editor_absoluteX="114dp" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAdicao"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextNumero1"
            tools:layout_editor_absoluteX="67dp" android:hint="numero 1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:gravity="center" android:minHeight="48dp"/>
    <TextView
            android:text="Resultado"
            android:layout_width="match_parent"
            android:layout_height="69dp" android:id="@+id/textViewResultado"
            tools:layout_editor_absoluteX="132dp" android:gravity="center"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/buttonDivisao"/>
</androidx.constraintlayout.widget.ConstraintLayout>