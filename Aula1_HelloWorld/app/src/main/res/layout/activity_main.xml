<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/botao1">
    <Button
            android:text="Clique Aqui 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoCliqueAqui1"
            tools:layout_editor_absoluteX="88dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textoParaAlterar"/>
    <Button
            android:text="Clique aqui 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoCliqueAqui2"
            android:onClick="showHelloWorld"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/botaoCliqueAqui1"/>
    <TextView
            android:text="Hello World"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="109dp" android:id="@+id/textoParaAlterar" android:textSize="20sp"
            android:gravity="center" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
    <Button
            android:text="Mudar para OlÃ¡ Mundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoOlaMundo"
            tools:layout_editor_absoluteX="109dp" android:onClick="alterarText"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/botaoCliqueAqui2"/>
    <Button
            android:text="Voltar para Hello World"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoHelloWorld"
            tools:layout_editor_absoluteX="151dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoOlaMundo"/>
</androidx.constraintlayout.widget.ConstraintLayout>