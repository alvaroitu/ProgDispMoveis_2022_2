<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Escolha um nÃºmero entre 0 a 10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            tools:layout_editor_absoluteX="132dp" android:gravity="center" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Jogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botao"
            tools:layout_editor_absoluteX="116dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:onClick="sortearNumero"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="67dp" android:id="@+id/resultado"
            tools:layout_editor_absoluteX="103dp" android:gravity="center" android:hint="Resultado"
            android:layout_marginTop="27dp" app:layout_constraintTop_toBottomOf="@+id/botao"/>
</androidx.constraintlayout.widget.ConstraintLayout>